<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:c="sap.ui.commons"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:ly="sap.ui.commons.layout"
	controllerName="com.zhenergy.data.manager.view.ZhiLiangGuanLiQuery" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<!--<mvc:XMLView viewName="com.zhenergy.data.manager.view.Header"/>-->
    <Panel height="720px" >
        <content>
            <c:TabStrip height="152px">
                <c:tabs>
                       <c:Tab class="query_tiaoJian" text="数据质量查询">
                           <c:content>
                            <f:SimpleForm
                                id="idQueryZhiLiangForm"
                                minWidth="800"
                                maxContainerCols="2"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                labelSpanL="2"
                                labelSpanM="2"
                                emptySpanL="3"
                                emptySpanM="3"
                                columnsL="1"
                                columnsM="1"
                                class="query_tiaoJian">
                                <f:content>   
                                    <ly:MatrixLayout columns="8" widths="12%,16%,8%,17%,13%,15%,15%,18%" height="100%">
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据项类型" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999" id="shuJuXiangLeiXingQuery">
                                                    <c:items>
                                                        <core:ListItem text="请选择类型" key="999"></core:ListItem>
                                                        <core:ListItem text="表" key="001"></core:ListItem>
                                                        <core:ListItem text="字段" key="002"></core:ListItem>
                                                        <core:ListItem text="文件" key="003"></core:ListItem>
                                                        <core:ListItem text="Web Service" key="004"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="系统" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999" id="xiTongQuery">
                                                    <c:items>
                                                        <core:ListItem text="请选择系统" key="999"></core:ListItem>
                                                        <core:ListItem text="MDM" key="001"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据项中文名称" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%" id="shuJuXiangZhongWenMingCheng" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据质量检查维度" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999" id="shuJuZhiLiangJianChaWeiDu">
                                                    <c:items>
                                                        <core:ListItem text="请选择质量维度" key="999"></core:ListItem>
                                                        <core:ListItem text="完整性" key="0"></core:ListItem>
                                                        <core:ListItem text="一致性" key="1"></core:ListItem>
                                                        <core:ListItem text="准确性" key="2"></core:ListItem>
                                                        <core:ListItem text="唯一性" key="3"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="检查频度" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999" id="jianChaWeiDu">
                                                    <c:items>
                                                        <core:ListItem text="请选择检查频度" key="999"></core:ListItem>
                                                        <core:ListItem text="日" key="00"></core:ListItem>
                                                        <core:ListItem text="周" key="01" ></core:ListItem>
                                                        <core:ListItem text="旬" key="02" ></core:ListItem>
                                                        <core:ListItem text="月" key="03" ></core:ListItem>
                                                        <core:ListItem text="季" key="04" ></core:ListItem>
                                                        <core:ListItem text="年" key="05" ></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="是否有效" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999" id="shiFouYouXiaoZhiLiang">
                                                    <c:items>
                                                        <core:ListItem text="请选择是否有效" key="999"></core:ListItem>
                                                        <core:ListItem text="N" key="false"></core:ListItem>
                                                        <core:ListItem text="Y" key="true"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Button text="查询" press="onQueryZhiLiang"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Button text="重置" press="onChongZhiZhiLiang"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            
                                        </ly:MatrixLayoutRow>
                                    </ly:MatrixLayout>
                                </f:content>
                            </f:SimpleForm> 
                        </c:content>
                    </c:Tab> 
                </c:tabs>
            </c:TabStrip>
            <mvc:JSView viewName="com.zhenergy.data.manager.view.ZhiLiangGuanLiResult"/>
        </content>
    </Panel>
</core:View>