<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:c="sap.ui.commons"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:ly="sap.ui.commons.layout"
	controllerName="com.zhenergy.data.manager.view.BiaoZhunGuanLiUpdate" 
	xmlns:html="http://www.w3.org/1999/xhtml">
    <Panel height="720px">
        <content>
            <c:TabStrip height="500px">
                <c:tabs>
                       <c:Tab text="数据标准更新">
                           <c:content>
                            <f:SimpleForm
                                id="idUpdateBiaoZhunForm"
                                minWidth="800"
                                maxContainerCols="2"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                labelSpanL="2"
                                labelSpanM="2"
                                emptySpanL="3"
                                emptySpanM="3"
                                columnsL="1"
                                columnsM="1"
                                class="editableForm">
                                <f:content>   
                                    <ly:MatrixLayout columns="7" widths="16%,20%,15%,20%,4%,15%,20%" height="100%">
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据项中文名称" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据项英文名称" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="主题域" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="请选择主题域" key="999"></core:ListItem>
                                                        <core:ListItem text="物资" key="001"></core:ListItem>
                                                        <core:ListItem text="财务" key="002"></core:ListItem>
                                                        <core:ListItem text="人事" key="003"></core:ListItem>
                                                        <core:ListItem text="销售" key="004"></core:ListItem>
                                                        <core:ListItem text="客户" key="005"></core:ListItem>
                                                        <core:ListItem text="供应商" key="006"></core:ListItem>
                                                        <core:ListItem text="设备" key="007"></core:ListItem>
                                                        <core:ListItem text="设备分类" key="008"></core:ListItem>
                                                        <core:ListItem text="设备特性" key="009"></core:ListItem>
                                                        <core:ListItem text="功能位置" key="010"></core:ListItem>
                                                        <core:ListItem text="科目" key="011"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="子主题域" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="请选择子主题域" key="999"></core:ListItem>
                                                        <core:ListItem text="功能位置基本信息" key="001"></core:ListItem>
                                                        <core:ListItem text="科目基本信息" key="002"></core:ListItem>
                                                        <core:ListItem text="客户基本信息" key="003"></core:ListItem>
                                                        <core:ListItem text="设备基本信息" key="004"></core:ListItem>
                                                        <core:ListItem text="物料基本信息" key="005"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="来源应用系统"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据项业务定义" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell colSpan="6">
                                                <c:TextArea value ="" cols="90" rows ="3"></c:TextArea>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据标准类别" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="请选择类别" key="999"></core:ListItem>
                                                        <core:ListItem text="主数据标准" key="0"></core:ListItem>
                                                        <core:ListItem text="代码标准" key="1"></core:ListItem>
                                                        <core:ListItem text="KPI标准" key="2"></core:ListItem>
                                                        <core:ListItem text="交换数据标准" key="3"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据安全分级" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="数据安全分级" key="999"></core:ListItem>
                                                        <core:ListItem text="绝密" key="0"></core:ListItem>
                                                        <core:ListItem text="机密" key="1"></core:ListItem>
                                                        <core:ListItem text="秘密" key="2"></core:ListItem>
                                                        <core:ListItem text="公开" key="3"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell></ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据标准负责人" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="相关数据运算关系" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell colSpan="6">
                                                <c:TextArea value ="" cols="90" rows ="3"></c:TextArea>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="有效预值" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextArea value ="" cols="14" rows ="3"></c:TextArea>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="可否空值" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="请选择可否空值" key="999"></core:ListItem>
                                                        <core:ListItem text="N" key="false"></core:ListItem>
                                                        <core:ListItem text="Y" key="true"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="默认值" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据的技术类型" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="请选择技术类型" key="999"></core:ListItem>
                                                        <core:ListItem text="Varchar" key="Varchar"></core:ListItem>
                                                        <core:ListItem text="Char" key="Char"></core:ListItem>
                                                        <core:ListItem text="Int" key="Int"></core:ListItem>
                                                        <core:ListItem text="Text" key="Text"></core:ListItem>
                                                        <core:ListItem text="Boolean" key="Boolean"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="数据的技术格式" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="映射类型" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="请选择映射类型" key="999"></core:ListItem>
                                                        <core:ListItem text="1-计算得出" key="1"></core:ListItem>
                                                        <core:ListItem text="2-映射得出" key="2"></core:ListItem>
                                                        <core:ListItem text="3-无映射" key="3"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="映射表" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="引用代码编号" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="是否有效" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:ComboBox width="95%" selectedKey="999">
                                                    <c:items>
                                                        <core:ListItem text="请选择是否有效" key="999"></core:ListItem>
                                                        <core:ListItem text="N" key="false"></core:ListItem>
                                                        <core:ListItem text="Y" key="true"></core:ListItem>
                                                    </c:items>
                                                </c:ComboBox>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="创建日期" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <DatePicker value="" valueFormat="yyyyMMdd" width="95%"></DatePicker>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="生效日期" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <DatePicker value="" valueFormat="yyyyMMdd" width="95%"></DatePicker>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="失效日期" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <DatePicker value="" valueFormat="yyyyMMdd" width="95%"></DatePicker>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                        <ly:MatrixLayoutRow>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="备用1" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="备用2" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:Label text="备用3" />
                                            </ly:MatrixLayoutCell>
                                            <ly:MatrixLayoutCell>
                                                <c:TextField value="" width="95%"/>
                                            </ly:MatrixLayoutCell>
                                        </ly:MatrixLayoutRow>
                                    </ly:MatrixLayout>
                                </f:content>
                            </f:SimpleForm> 
                            <ly:MatrixLayout  columns="7" widths="10%,5%,10%,10%,10%,15%,15%">
                                <ly:MatrixLayoutRow>
                                    <ly:MatrixLayoutCell>
                                    </ly:MatrixLayoutCell>
                                    <ly:MatrixLayoutCell>
                                    </ly:MatrixLayoutCell>
                                    <ly:MatrixLayoutCell>
                                        <c:Button text="保存" icon = "sap-icon://save" press="onSave" />
                                    </ly:MatrixLayoutCell>
                                    <ly:MatrixLayoutCell>
                                        <c:Button text="重置" icon = "sap-icon://refresh" press="onCancel"/>
                                    </ly:MatrixLayoutCell>
                                    <ly:MatrixLayoutCell>
                                        <c:Button text="删除" icon = "sap-icon://sys-cancel" press="onCancel"/>
                                    </ly:MatrixLayoutCell>
                                    <ly:MatrixLayoutCell>
                                    </ly:MatrixLayoutCell>
                                    <ly:MatrixLayoutCell>
                                    </ly:MatrixLayoutCell>
                                </ly:MatrixLayoutRow>
                            </ly:MatrixLayout>
                        </c:content>
                    </c:Tab> 
                </c:tabs>
            </c:TabStrip>
        </content>
    </Panel>
</core:View>